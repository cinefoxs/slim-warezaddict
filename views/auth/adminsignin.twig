{% extends 'templates/admin.twig' %}

{% block content %}

<div class="row">
  <div class="col-12 text-center">

    <h1 class="mb-3">Access Denied!</h1>

    <form class="form-signin text-center" action="{{ path_for('admin.signin') }}" method="POST" autocomplete="off">
      <div class="form-group">

        <label for="inputEmail" class="sr-only">Email address</label>
        <input id="email" class="form-control {{ errors.email ? 'is-invalid': '' }}" type="email" name="email" placeholder="you@domain.com" value="{{email}}">
        {% if errors.email %}
        <span class="invalid-feedback">{{ errors.email|first }}</span>
        {% endif %}

      </div>
      <div class="form-group">

        <label for="inputPassword" class="sr-only">Password</label>
        <input id="password" class="form-control" type="password" name="password" placeholder="" aria-describedby="helpId">
        {% if errors.password %}
        <span class="invalid-feedback">{{ errors.password|first }}</span>
        {% endif %}

      </div>
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me">
          Remember me
        </label>
      </div>

      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>

      {{ csrf.field|raw }}

    </form>
  </div>
</div>

{% endblock %}
