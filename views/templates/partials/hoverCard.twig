
<div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 mb-3">
  <div class="box16">

    {% if val.poster_path %}
      <img src="https://image.tmdb.org/t/p/w300{{ val.poster_path }}" alt="Image">
    {% else %}
      <img data-src="holder.js/300x450/?random=yes&text=No Image" alt="Image">
    {% endif %}

    <div class="box-content">

      {% if val.title %}
        <h4 class="title">{{ val.title }} ({{ val.release_date|date('Y') }})</h4>
      {% elseif val.original_title %}
        <h4 class="title">{{ val.original_title }} ({{ val.release_date|date('Y') }})</h4>
      {% else %}
        <h4 class="title">Unknown Name - ({{ val.release_date|date('Y') }})</h4>
      {% endif %}

      {# if val.genre_ids %}
        <p class="vote">Genres: 
          <span id="genreIds">
            {% for genres in val.genre_ids %}
              {{ genres }}
            {% endfor %}
          </span>
        </p> 
      {% else %}
        <p class="vote">Genres: Unknown</p>
      {% endif #}

      {# <p class="vote">IMDB Rating: {{ val.vote_average }} / 10 Stars</p> #}

      <ul class="social">
        <li>
          <a href="#" class="rating tDown" onClick="rateIt({{ val.id }}, 1, 1);">
            <i class="fas fa-thumbs-down"></i>
          </a>
        </li>
        <li>
          <a href="#" class="rating tUp" onClick="rateIt({{ val.id }}, 2, 1);">
            <i class="fas fa-thumbs-up"></i>
          </a>
        </li>
      </ul>

      <span class="vote badge badge-light" id="badge_{{ val.id }}"></span>

      {% if val.overview %}
        <p class="summary mt-3">{{ val.overview|truncate(100, true, '...') }}</p>
      {% else %}
        <p class="summary mt-3">No plot available...</p>
      {% endif %}

      <a href="/movie/{{ val.id }}" id="{{ val.id }}" class="btn btn-primary"><b>Read More</b></a>

    </div>

  </div>
</div>
