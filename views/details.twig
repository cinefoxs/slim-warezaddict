{% extends 'templates/app.twig' %}

{% block content %}

  <div class="row text-center">
    <div class="col-12 mb-4 mt-2 text-center" id="searchBox">

      <form class="input-group input-group-lg" action="/search" method="post">
        <input type="search" class="form-control form-control-lg sBox" name="q" value="" placeholder="Search for Movies, TV Shows, Actors, etc..." autocomplete="off" aria-label="Search">
        {{ csrf_field()|raw }}
        {# <input type="hidden" name="{{ turbo.getTokenNameKey }}" value="{{ turbo.getTokenName }}"> #}
        {# <input type="hidden" name="{{ turbo.getTokenValueKey }}" value="{{ turbo.getTokenValue }}"> #}
        <span class="input-group-addon">
          <button class="btn btn-primary btn-lg" type="submit">
            <i class="fa fa-search"></i>
          </button>
        </span>
      </form>

    </div>
  </div>

  <div class="row">
    <div class="col-12 text-center">
      <h2>{{ results.originalTitle }} ({{ results.releaseDate|date('Y') }})</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-center">
    </div>
  </div>

{% endblock %}
